generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  clerkId    String    @unique
  created_at DateTime  @default(now())
  image_url  String?
  project    Project[]
}

model Project {
  id                Int          @id @default(autoincrement())
  name              String       @default("")
  created_at        DateTime     @default(now())
  user_id           Int
  webcontainer_file String
  chat              Chat[]
  llm_action        LLM_Action[]
  owner             User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model LLM_Action {
  id         Int      @id @default(autoincrement())
  content    String
  step       Step?
  sender     Sender
  agent_name Agent?
  created_at DateTime @default(now())
  project_id Int
  project    Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

model Chat {
  id         Int      @id @default(autoincrement())
  content    String
  sender     Sender
  created_at DateTime @default(now())
  project_id Int
  project    Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

enum Sender {
  User
  Agent
}

enum Agent {
  Create_Project
  Edit_Project
  Fix_Project
}

enum Step {
  plan
  generate_file
  observe
  verify
  error
  output
}
