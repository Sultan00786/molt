generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int   @id @default(autoincrement())
  clerkId   String  @unique
  email     String  @unique
  name      String  
  project   Project[]
  created_at    DateTime
}

model Project {
  id            Int               @id @default(autoincrement())
  name          String            @default("")
  description   String    
  created_at    DateTime          @default(now())
  user_id       Int
  owner         User              @relation(fields: [user_id], references: [id], onDelete: Cascade)
  file_message  File_Message[]
}

model File_Message {
  id            Int       @id @default(autoincrement())
  content       String
  step          Step?
  sender        Sender
  agent_name    Agent?
  created_at    DateTime
  project_id    Int
  project       Project   @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

enum Sender {
  User
  Agent
}

enum Agent {
  Create_Project
  Edit_Project
  Fix_Project
}

enum Step {
  plan
  generate_file
  observe
  verify
  error
  output
}

